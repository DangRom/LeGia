@model LeGia.Areas.Admin.Models.PostViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Tạo mới bài viết</h3>

<form class="form-horizontal" asp-controller="Post" asp-action="New" method="post">
    <div asp-validation-summary="@ValidationSummary.ModelOnly"></div>
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Tiêu đề</label>
        <div class="col-sm-6">
            <input asp-for="Name" class="form-control height-input" id="name" placeholder="tiêu đề bài viết" onkeyup="ChangeToSlug();">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label for="alias" class="col-sm-2 control-label">Định danh</label>
        <div class="col-sm-6">
            <input asp-for="Alias" class="form-control height-input" id="alias" readonly placeholder="định danh - tự động lấy từ tiêu đề">
            <span asp-validation-for="Alias" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label for="chude" class="col-sm-2 control-label">Danh mục chủ đề</label>
        <div class="col-sm-3">
            <select asp-for="CategoryId" asp-items="ViewBag.ListCategory" class="form-control select-text" id="chude"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label for="image" class="col-sm-2 control-label">Hình đại diện</label>
        <div class="col-sm-10">
            <input asp-for="Image" class="form-control height-input" id="image">
        </div>
    </div>
    <div class="form-group">
        <label for="shortcontent" class="col-sm-2 control-label">Mô tả ngắn</label>
        <div class="col-sm-10">
            <input asp-for="ShortContent" class="form-control height-input" id="shortcontent">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <label class="col-sm-2"><input asp-for="Activated" checked />  hiển thị ?</label>
        </div>
    </div>
    <div class="form-group">
        <label for="mota" class="col-sm-2 control-label">Mô tả</label>
        <div class="col-sm-10">
            <textarea asp-for="Content" class="form-control" id="mota"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Lưu</button>
        </div>
    </div>
</form>

