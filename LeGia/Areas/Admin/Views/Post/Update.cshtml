@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Cập nhật bài viết</h3>

<form class="form-horizontal" asp-controller="" asp-action="" method="post">
    <div class="form-group">
        <label for="tieude" class="col-sm-2 control-label">Tiêu đề</label>
        <div class="col-sm-6">
            <input type="text" class="form-control height-input" id="tieude" placeholder="tiêu đề bài viết">
        </div>
    </div>
    <div class="form-group">
        <label for="dinhdanh" class="col-sm-2 control-label">Định danh</label>
        <div class="col-sm-6">
            <input type="text" class="form-control height-input" id="dinhdanh" placeholder="định danh - tự động lấy từ tiêu đề">
        </div>
    </div>
    <div class="form-group">
        <label for="chude" class="col-sm-2 control-label">Danh mục chủ đề</label>
        <div class="col-sm-6">
            <input type="text" class="form-control height-input" id="chude" placeholder="chọn chủ đề">
        </div>
    </div>
    <div class="form-group">
        <label for="image" class="col-sm-2 control-label">Hình đại diện</label>
        <div class="col-sm-10">
            <input type="text" class="form-control height-input" id="image">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <label class="col-sm-2"><input type="checkbox" checked />  hiển thị ?</label>
        </div>
    </div>
    <div class="form-group">
        <label for="mota" class="col-sm-2 control-label">Mô tả</label>
        <div class="col-sm-10">
            <textarea class="form-control" id="mota"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Lưu</button>
        </div>
    </div>
</form>

