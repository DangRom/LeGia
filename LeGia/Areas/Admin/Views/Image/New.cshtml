@model LeGia.Areas.Admin.Models.ImageViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Tạo mới thông tin hình ảnh</h3>

<form class="form-horizontal" asp-controller="Image" asp-action="New" method="post">
    <div asp-validation-summary="@ValidationSummary.ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label for="tenhienthi" class="col-sm-2 control-label">Tên hiển thị</label>
        <div class="col-sm-6">
            <input asp-for="Name" class="form-control height-input" id="tenhienthi" placeholder="tên hiển thị cho hình ảnh">
        </div>
    </div>
    <div class="form-group">
        <label for="dinhdanh" class="col-sm-2 control-label">Định danh</label>
        <div class="col-sm-6">
            <input asp-for="Alias" class="form-control height-input" id="dinhdanh" placeholder="định danh - tự động lấy tên hiển thị">
        </div>
    </div>
    <div class="form-group">
        <label for="image" class="col-sm-2 control-label">Hình ảnh</label>
        <div class="col-sm-10">
            <input asp-for="Image" class="form-control height-input" id="image" placeholder="chọn hình ảnh">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <label class="col-sm-3"><input asp-for="IsLogo"/>  logo khách hàng</label>
            <label class="col-sm-2"><input asp-for="IsSlide" />  slide</label>
            <label class="col-sm-2"><input asp-for="IsProject" />  dự án</label>
        </div>
    </div>
    <div class="form-group">
        <label for="link" class="col-sm-2 control-label">Link</label>
        <div class="col-sm-10">
            <input asp-for="Link" class="form-control height-input" id="link" placeholder="link trỏ đến nếu có">
        </div>
    </div>
    <div class="form-group">
        <label for="mota" class="col-sm-2 control-label">Mô tả</label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control height-input" id="mota" placeholder="mô tả thêm về hình ảnh">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Lưu</button>
        </div>
    </div>
</form>

