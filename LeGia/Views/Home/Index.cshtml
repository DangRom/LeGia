@{
    ViewData["Title"] = "Home Page";
}

        <main>
            @await Component.InvokeAsync("Slide")
            <!-- End slider-->
            <div class="lg__content">
                <div class="lg__content__box ui segment">
                    <div class="lg__content__box__header">
                        <h1 class="lg__content__box__header__title">Giới Thiệu Về Chúng Tôi</h1>
                    </div>
                    <div class="lg__content__box__content">
                        <div class="">
                            <p class="lg__content__box__content__title">
                                Công ty chúng tôi có đội ngũ cán bộ, nhân viên giỏi chuyên môn nghiệp vụ, rất giàu kinh nghiệm trong quản lý, điều hành vận tải, sẵn sàng tư vấn miễn phí cho khách hàng. Khi sử dụng dịch vụ chúng tôi quý khách chỉ phải bỏ ra phí dịch vụ vận chuyển tiết
                                kiệm nhất, nhưng sẽ nhận được chất lượng dịch vụ tốt nhất
                            </p>
                            <div class="row lg__row__margin">
                                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                    <div class="lg__content__box__icon">
                                        <i class="fa fa-thumbs-up thumbs__color" aria-hidden="true"></i>
                                        <p class="lg__content__box__icon__title thumbs__color">Uy Tín Được Đảm Bảo</p>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                    <div class="lg__content__box__icon">
                                        <i class="fa fa-trophy trophy__color" aria-hidden="true"></i>
                                        <p class="lg__content__box__icon__title trophy__color">Chất lượng Được Kiểm Chứng</p>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                    <div class="lg__content__box__icon">
                                        <i class="fa fa-handshake-o handshake__color" aria-hidden="true"></i>
                                        <p class="lg__content__box__icon__title handshake__color">Tận Tâm Phục Vụ</p>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                </div>
                @await Component.InvokeAsync("Service")
                <div class="row lg__content__box lg__row__reset">
                    @await Component.InvokeAsync("PostHome")
                    <div class="col__lg__4">
                        <div class="ui segment">
                            <div class="lg__content__box__header">
                                <h1 class="lg__content__box__header__title">Liên Hệ</h1>
                            </div>
                            <div class="lg__content__box__content">
                                <form class="ui form" method="post">
                                    <div class="field">
                                        <label>Tên của bạn</label>
                                        <input type="text" required name="yourname" placeholder="Ví dụ: Nguyễn Văn A">
                                    </div>
                                    <div class="field">
                                        <label>Số điện thoại</label>
                                        <input type="text" required name="phone" placeholder="Ví dụ: 0909123456">
                                    </div>
                                    <div class="field">
                                        <label>Email</label>
                                        <input type="email" required name="email" placeholder="Ví dụ: nguyenvana@gmail.com">
                                    </div>
                                    <div class="field">
                                        <label>Nội dụng</label>
                                        <textarea id="contact__textarea" rows="4" required></textarea>
                                    </div>
                                    <button class="ui button lg__right green" type="submit">Gửi</button>
                                    <div class="clearfix"></div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                @await Component.InvokeAsync("Customer")
            </div>
        </main>
