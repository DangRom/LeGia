@model LeGia.Models.ContactViewModel
@{
    ViewData["Title"] = "Cty TNHH xây dựng và thang máy Thuận Phong - " + " liên hệ với chúng tôi";
}


<div class="lg__content">
                <div class="lg__breadcrumb">
                    <ul class="list__menu reset lg__breadcrumb__list">
                        <li class="list__item__inline lg__breadcrumb__list__item">
                            <a href="/" class="lg__breadcrumb__list__item__link">Trang Chủ</a>
                        </li>
                        <li class="list__item__inline lg__breadcrumb__list__item">
                            <a href="/lien-he" class="lg__breadcrumb__list__item__link ">Liên Hệ</a>
                        </li>
                    </ul>
                </div>
                <div class="lg__content__box ui segment">
                    <div class="">
                        <div class="lg__content__box__header">
                            <h1 class="lg__content__box__header__title">Liên Hệ</h1>
                        </div>
                        <div class="lg__content__box__content">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <div class="lg__content__box__content">
                                        <form class="ui form" method="post" asp-controller="lien-he", asp-action="Index">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="field">
                                                <label>Tên của bạn</label>
                                                <input asp-for="FullName" required="" name="fullname" placeholder="Ví dụ: Nguyễn Văn A">
                                                <span asp-validation-for="FullName" class="text-danger"></span>
                                            </div>
                                            <div class="field">
                                                <label>Số điện thoại</label>
                                                <input asp-for="Phone" required="" name="phone" placeholder="Ví dụ: 0909123456">
                                                <span asp-validation-for="Phone" class="text-danger"></span>
                                            </div>
                                            <div class="field">
                                                <label>Email</label>
                                                <input asp-for="Email" required="" name="email" placeholder="Ví dụ: nguyenvana@gmail.com">
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>
                                            <div class="field">
                                                <label>Nội dụng</label>
                                                <textarea asp-for="Content" id="contact__textarea" rows="2" required=""></textarea>
                                                <span asp-validation-for="Content" class="text-danger"></span>
                                            </div>
                                            <button class="ui button lg__right green" type="submit">Gửi</button>
                                            <div class="clearfix"></div>
                                        </form>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 border__left">
                                    <div class="lg__contact__box">
                                        <h3 class="lg__contact__box__title">Thông tin liên hệ</h3>
                                        <ul class="list__menu list__contact">
                                            <li class="list__contact__item">Địa chỉ: @ViewBag.Company.Address</li>
                                            <li class="list__contact__item">
                                                @*<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3918.5051705782153!2d106.77183651424649!3d10.849129260815449!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3175270b17414653%3A0x54f2028d8135e4bc!2zQ-G6p3Ugdsaw4bujdCBuZ8OjIHTGsCBUaOG7pyDEkOG7qWMsIEhp4buHcCBQaMO6LCBRdeG6rW4gOSwgSOG7kyBDaMOtIE1pbmgsIFZp4buHdCBOYW0!5e0!3m2!1svi!2s!4v1488807857469" width="300" height="200" frameborder="0" style="border:0" allowfullscreen=""></iframe>*@
                                                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d346.4199384247436!2d106.51537159288827!3d10.788764269923755!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1svi!2s!4v1560665467074!5m2!1svi!2s" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                                            </li>
                                            <li class="list__contact__item">Số điện thoại: @ViewBag.Company.HotLine</li>
                                            <li class="list__contact__item">Email: @ViewBag.Company.Email</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>